                <%- include('partials/nav.ejs'); %>
                <%- include('partials/sidebar-footer.ejs'); %>
            </div>
        </div>
        <%- include('partials/top-nav.ejs'); %>
        <div class="right_col" role="main">
            <div class="">

                <div class="page-title">
                    <div class="title_left">
                        <h3 id="collection-type"></h3>
                    </div>
                    <div class="title_right"></div>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Make Digital Objects</h2>
                                <ul class="nav navbar-right"></ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div id="message"></div>
                                <div id="astools-response" style="background-color: #000000;color: #FFFFFF;padding: 5px;visibility: hidden"></div>
                                <h4>Digital Object Workspace</h4><br>
                                <table id="digital-object-workspace-table"
                                       class="table table-striped table-bordered bulk_action">
                                    <thead>
                                    <tr>
                                        <th>Folders</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody id="packages"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- modal -->
    <div class="modal aspace-login-modal" tabindex="-1" role="dialog" aria-labelledby="aspace-login-modal"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-body" style="background-color: #f2f2f2;">
                <div class="modal-header">
                    <div class="modal-title" id="staticBackdropLabel"><i class="fa fa-info"></i> Enter Your ArchivesSpace
                        Credentials
                    </div>
                </div>
                <div id="aspace-message"></div>
                <div class="col-12">
                    <form name="astools-form" id="astools-form">
                        <div class="form-group">
                            <label for="aspace-username"><span style="color: #8B2332">*</span> ArchivesSpace Username</label>
                            <input name="aspace-username" type="text" class="form-control" id="aspace-username" required>
                            <label for="aspace-password"><span style="color: #8B2332">*</span> ArchivesSpace Password</label>
                            <input name="aspace-password" type="password" class="form-control" id="aspace-password" required>
                            <input name="username" type="hidden" id="username">
                            <input name="password" type="hidden" id="password">
                            <input name="is_kaltura" type="hidden" id="is_kaltura">
                            <input name="is_test" type="hidden" id="is_test" value="0">
                        </div>
                        <br>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="digital-object-workspace-button" type="button" class="btn btn-primary">
                        <i class="fa fa-arrow-right"></i>&nbsp;&nbsp;Next
                    </button>
                </div>
            </div>
        </div>

        <div class="modal test" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                <input type="text" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Message:</label>
                                <textarea class="form-control" id="message-text"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Send message</button>
                    </div>
                </div>
            </div>
        </div>

